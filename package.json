{
  "name": "silverhand-mod-loader",
  "version": "1.0.0",
  "description": "A mod loader for Cyberpunk 2077 with virtual filesystem overlay",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@babel/runtime": "^7.25.6",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.451.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.0",
    "react-window": "^1.8.11",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.5",
    "concurrently": "^9.2.0",
    "electron": "^32.2.0",
    "react-scripts": "^5.0.1",
    "wait-on": "^8.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && node electron-pack.js",
    "preelectron-pack": "npm run build"
  },
  "build": {
    "appId": "com.silverhand.modloader",
    "productName": "Silverhand Mod Loader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "extraMetadata": {
      "main": "public/electron.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
